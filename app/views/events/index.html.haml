%h1 Listing events

%table
  %tr
    %th Title
    %th Start date
    %th End date
    %th Notiz
    %th User
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.title
      %td= event.start_date
      %td= event.end_date
      %td= event.notiz
      %td= event.user_id
      %td= link_to 'Show', event
      %td= link_to 'Edit', edit_event_path(event)
      %td= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete

%br

