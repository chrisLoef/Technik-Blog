= form_for @rent do |f|
  -if @rent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rent.errors.count, "error")} prohibited this rent from being saved:"
      %ul
        - @rent.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :notiz
    = f.text_area :notiz
  .field
    = f.label :confirmed
    = f.check_box :confirmed
  .actions
    = f.submit 'Save'
